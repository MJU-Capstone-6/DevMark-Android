<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:paddingVertical="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@color/platinum_alpha30">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        tools:text="장훈"
        style="@style/pretendard_semi_bold"
        android:textSize="16sp"
        android:textColor="@color/rust"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toEndOf="@id/tv_name"
        app:layout_constraintVertical_bias="0.8"
        android:layout_marginStart="8dp"

        tools:text="10시간 전"
        style="@style/pretendard_medium"
        android:textSize="12sp"
        android:textColor="@color/platinum"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="btn_delete, btn_modify"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_delete"
        android:layout_width="32dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="4dp"

        android:background="@color/transparent"
        android:text="@string/text_btn_delete"
        style="@style/pretendard_medium"
        android:textSize="14sp"
        android:textColor="@color/taupe"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_modify"
        android:layout_width="32dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_delete"
        android:layout_marginEnd="10dp"

        android:background="@color/transparent"
        android:text="@string/text_btn_modify"
        style="@style/pretendard_medium"
        android:textSize="14sp"
        android:textColor="@color/taupe"/>

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"

        tools:text="좋은 글 감사합니다! 잘 보고 가요! :)"
        style="@style/pretendard_regular"
        android:textSize="14sp"
        android:textColor="@color/rust"
        android:lineHeight="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>