<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="312dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/dialog_round"
    android:padding="12dp">

    <TextView
        android:id="@+id/tv_update_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:text="카테고리 수정"
        style="@style/pretendard_bold"
        android:textSize="16sp"/>


    <AutoCompleteTextView
        android:id="@+id/et_auto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_update_category_title"

        android:layout_marginTop="12dp"
        android:background="@drawable/shape_update_category_et"

        style="@style/pretendard_semi_bold"
        android:textSize="16sp"
        android:textColor="@color/rust"
        android:hint="카테고리 검색"
        android:textColorHint="#CC5E524E"

        android:completionThreshold="1"
        android:maxLines="1"
        android:dropDownHeight="wrap_content"
        android:inputType="text"
        android:imeOptions="actionDone" />

    <Button
        android:id="@+id/dialog_btn_save"
        android:layout_width="0dp"
        android:layout_height="30dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dialog_btn_done"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_auto"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"

        android:background="@drawable/dialog_btn_round"
        style="@style/pretendard_bold"
        android:textColor="@color/taupe"
        android:textSize="14sp"
        android:text="저장" />

    <Button
        android:id="@+id/dialog_btn_done"
        android:layout_width="0dp"
        android:layout_height="30dp"

        app:layout_constraintBottom_toBottomOf="@id/dialog_btn_save"
        app:layout_constraintTop_toTopOf="@+id/dialog_btn_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dialog_btn_save"
        android:layout_marginStart="4dp"

        android:background="@drawable/dialog_btn_round"
        style="@style/pretendard_bold"
        android:textColor="@color/taupe"
        android:textSize="14sp"
        android:text="닫기"
        />

</androidx.constraintlayout.widget.ConstraintLayout>