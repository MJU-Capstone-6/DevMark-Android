<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alabaster"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <Toolbar
        android:id="@+id/tb_bookmark"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/platinum"
        android:contentInsetStart="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:background="@color/platinum"
            android:src="@drawable/ic_back"
            tools:ignore="ContentDescription" />

        <TextView
            style="@style/bold_20_tb_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/text_tb_bookmark"
            android:textColor="@color/taupe" />

        <ImageButton
            android:id="@+id/ib_bookmark"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_bookmark_setting"
            android:background="@color/transparent"
            android:layout_gravity="end"
            tools:ignore="ContentDescription" />
    </Toolbar>

    <TextView
        android:id="@+id/tv_bookmark_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tb_bookmark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="16dp"
        tools:text="[Android] NestedScrollView에 대해 알아보자"
        style="@style/pretendard_bold"
        android:textSize="20sp"
        android:textColor="@color/rust"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/div"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/tv_bookmark_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:dividerColor="@color/sage"/>

    <ImageButton
        android:id="@+id/ib_copy"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toBottomOf="@id/div"
        app:layout_constraintStart_toStartOf="@id/div"
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_code_print"
        android:background="@color/transparent"
        app:tint="@color/rust"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/ib_link"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toBottomOf="@id/div"
        app:layout_constraintStart_toEndOf="@id/ib_copy"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_external_link"
        android:background="@color/transparent"
        app:tint="@color/rust"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_category_edit"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/div"
        app:layout_constraintEnd_toEndOf="@id/div"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:paddingHorizontal="8dp"
        android:background="@drawable/shape_readable_toggle"
        tools:text="Android"
        style="@style/pretendard_medium"
        android:textSize="14sp"
        android:textColor="@color/rust"
        android:textAllCaps="false"
        android:drawableEnd="@drawable/ic_edit"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_readable"
        android:layout_width="64dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/div"
        app:layout_constraintEnd_toStartOf="@id/btn_category_edit"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/shape_readable_toggle"
        android:text="@string/toggle_readable"
        style="@style/pretendard_medium"
        android:textSize="14sp"
        android:textColor="@color/rust"
        android:textAllCaps="false"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ib_copy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="16dp"
                android:background="@drawable/workspace_round"
                android:backgroundTint="@color/platinum_alpha30"
                android:padding="12dp"
                style="@style/pretendard_medium"
                android:lineHeight="24dp"
                android:textSize="14sp"
                android:textColor="@color/rust"

                tools:text="@string/dummy_summary"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_summary"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="16dp"
                android:background="@drawable/shape_comment_list_round"
                android:padding="12dp"

                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_comment"/>

            <EditText
                android:id="@+id/et_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rv_comment"
                app:layout_constraintStart_toStartOf="@id/rv_comment"
                app:layout_constraintEnd_toStartOf="@id/btn_post"

                android:background="@drawable/shape_comment_input_round"
                android:hint="@string/edit_text_hint"
                android:textColorHint="@color/rust"
                style="@style/pretendard_medium"
                android:textSize="14sp"
                android:textColor="@color/rust"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp"

                android:privateImeOptions="defaultInputmode=korean"
                android:inputType="textNoSuggestions|textMultiLine|textVisiblePassword"
                android:maxLength="100"
                tools:ignore="Autofill" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_post"
                android:layout_width="44dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/et_comment"
                app:layout_constraintBottom_toBottomOf="@id/et_comment"
                app:layout_constraintEnd_toEndOf="@id/rv_comment"
                app:layout_constraintStart_toEndOf="@id/et_comment"
                android:background="@drawable/shape_comment_btn_round"
                android:text="@string/text_btn_post"
                style="@style/pretendard_bold"
                android:textSize="14sp"
                android:textColor="@color/rust"/>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/div1"
                android:layout_width="0dp"
                android:layout_height="1dp"

                app:layout_constraintBottom_toBottomOf="@id/et_comment"
                app:layout_constraintStart_toStartOf="@id/et_comment"
                app:layout_constraintEnd_toEndOf="@id/et_comment"

                android:layout_marginBottom="8dp"

                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal"
                app:dividerColor="@color/rust"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
